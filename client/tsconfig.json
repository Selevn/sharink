{
  "compilerOptions": {
    "target": "es5",
    "module": "ES2022",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["node_modules"]
}
