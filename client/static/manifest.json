{
  "manifest_version": 3,
  "name": "Sharink",
  "version": "1.0",

  "description": "Share your favorite tracks with friend independent from music platform",

  "icons": {
    "48": "icons/border-48.png"
  },
  "host_permissions": [
    "http://*/*",
    "http://sharink.com:8080/*"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.music.yandex.by/*", "*://*.music.yandex.ru/*"],
      "js": ["yandex.bundle.js"],
      "run_at":"document_end"
    },
    {
      "matches": ["*://*.music.youtube.com/*"],
      "js": ["youtube.bundle.js"],
      "run_at":"document_end"
    }
  ]
}
